{
  "compilerOptions": {
    "module": "Node16",
    "target": "ES2022",
    "experimentalDecorators": true,
    "types": ["node"],
    "lib": ["ES2022"],
    "sourceMap": true,
    "rootDirs": ["src", "src/ATAP.VSCExtension.AI/ATAP-AiAssist"],
    "baseUrl": "src", // This must be specified if "paths" is set.
    "paths": {
      "@ErrorClasses/*": ["ErrorClasses/*"],
      "@Logger/*": ["Logger/*"],
      "@Decorators/*": ["Decorators/*"],
      "@SecurityService/*": ["SecurityService/*"],
      "@IDTypes/*": ["IDTypes/*"],
      "@Utilities/*": ["Utilities/*"],
      "@Serializers/*": ["Serializers/*"],
      "@Philote/*": ["Philote/*"],
      "@ItemWithIDs/*": ["ItemWithIDs/*"],
      "@AssociationsService/*": ["AssociationsService/*"],
      "@QueryContextsService/*": ["QueryContextsService/*"],
      "@DataService/*": ["DataService/*"],
      "@TokensService": ["TokensService/*"],
      "@CommandsService/*": ["CommandsService/*"],
      "@EndpointManager/*": ["EndpointManager/*"],
      "@TypeMap/*": ["TypeMap/*"]
      // Add more path mappings as needed.
    },

    "strict": true /* enable all strict type-checking options */,
    /* Additional Checks */
    "noImplicitReturns": true /* Report error when not all code paths in function return a value. */,
    "noFallthroughCasesInSwitch": true /* Report errors for fallthrough cases in switch statement. */
    // "noUnusedParameters": true,  /* Report errors on unused parameters. */
  }
}
