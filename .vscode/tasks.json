{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "watch",
      "problemMatcher": "$ts-webpack-watch",
      "isBackground": true,
      "presentation": {
        "reveal": "never",
        "group": "watchers"
      },
      "group": "build",
      "label": "npm: watch"
    },
    {
      "type": "npm",
      "script": "watch-tests",
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "presentation": {
        "reveal": "never",
        "group": "watchers"
      },
      "group": "build"
    },
    {
      "label": "tasks: watch-tests",
      "dependsOn": [
        "npm: watch",
        "npm: watch-tests"
      ],
      "problemMatcher": []
    },
    {
      "label": "Test",
      "type": "shell",
      "command": "Invoke-Pester -PesterOption @{IncludeVSCodeMarker=$true};ExcludeTag='Disabled'",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$pester"
      ]
    },
    {
      "label": "Build C# Project",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${fileDirname}/ATAP.Utilities.Images.Enumerations.csproj",
        "/p:GenerateFullPaths=true",
        "/p:Configuration=Debug",
        "/p:DeployOnBuild=true",
        "/p:PublishProfile=\"properties/publishProfiles/Development.pubxml\"",
        "/p:TargetFramework=net7.0",
        "/bl:_devlogs/msbuild.binlog",
        "/clp:NoSummary"
      ],
      "presentation": {
        "reveal": "always",
        "echo": true
      },
      "problemMatcher": "$msCompile",
      "group": "build"
    },
    {
      "label": "startVA",
      "command": "C:\\Program Files\\VoiceAttack\\VoiceAttack.exe",
      "type": "process",
      "args": [
        "-bypassimpropershutdowncheck"
      ],
      "presentation": {
        "reveal": "always",
        "echo": true
      }
    },
    {
      "label": "stopVA",
      "command": "pwsh",
      "type": "shell",
      "args": [
        "-ExecutionPolicy",
        "Unrestricted",
        "-Command",
        "stopVA"
      ],
      "presentation": {
        "reveal": "always",
        "echo": true
      }
    },
    {
      "label": "publishPluginAndStartVA",
      "command": "pwsh",
      "type": "shell",
      "args": [
        "-ExecutionPolicy",
        "Unrestricted",
        "-Command",
        "psva"
      ],
      "presentation": {
        "reveal": "always",
        "echo": true
      },
      "problemMatcher": []
    },
    {
      "label": "buildVA",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "src/ATAP.Utilities.VoiceAttack/ATAP.Utilities.VoiceAttack.csproj",
        "/p:GenerateFullPaths=true",
        "/p:Configuration=Debug",
        "/p:DeployOnBuild=true",
        "/p:PublishProfile=\"properties/publishProfiles/Development.pubxml\"",
        "/p:TargetFramework=net48",
        "/bl:_devlogs/msbuild.binlog",
        "/clp:NoSummary"
      ],
      "presentation": {
        "reveal": "always",
        "echo": true
      },
      "problemMatcher": "$msCompile",
      "group": "build"
    },
    {
      "label": "publishVA",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "src/ATAP.Utilities.VoiceAttack/ATAP.Utilities.VoiceAttack.csproj",
        "/p:Configuration=Debug",
        "/p:DeployOnBuild=true",
        "/p:PublishProfile=\"properties/publishProfiles/Development.pubxml\"",
        "/p:TargetFramework=net48",
        "/bl:_devlogs/msbuild.binlog"
      ],
      "problemMatcher": "$msCompile",
      "group": "build"
    },
    {
      "label": "BuildCodeAnalysis",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "src/ATAP.Console.CodeAnalysis/ATAP.Console.CodeAnalysis.csproj",
        "/p:GenerateFullPaths=true",
        "/p:Configuration=Debug",
        "/p:DeployOnBuild=true",
        "/p:PublishProfile=\"properties/publishProfiles/Development.pubxml\"",
        "/p:TargetFramework=net48",
        "/bl:_devlogs/msbuild.binlog",
        "/clp:NoSummary"
      ],
      "presentation": {
        "reveal": "always",
        "echo": true
      },
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "watch",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "${workspaceFolder}/${fileDirname}.csproj",
        "/p:Configuration=Debug",
        "/p:DeployOnBuild=true",
        "/p:PublishProfile=\"properties/publishProfiles/Development.pubxml\"",
        "/p:TargetFramework=net48",
        "/bl:_devlogs/msbuild.binlog"
      ],
      "problemMatcher": "$msCompile"
    }
  ]
}
